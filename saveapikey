<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gemini API Key Storage</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2>Gemini API Key Storage</h2>
        <div id="apiKeyForm" class="mt-3">
            <div class="form-group">
                <label for="apiKey">Enter Gemini API Key:</label>
                <input type="text" id="apiKey" class="form-control" onfocus="autofillApiKey()">
            </div>
            <button class="btn btn-primary" onclick="saveApiKey()">Save API Key</button>
        </div>
        <div id="savedApiKey" class="mt-3" style="display: none;">
            <h4>Saved API Key:</h4>
            <p id="apiKeyDisplay"></p>
            <button class="btn btn-danger" onclick="removeApiKey()">Remove API Key</button>
        </div>
        <div id="apiActions" class="mt-3" style="display: none;">
            <h4>API Actions:</h4>
            <button class="btn btn-success" onclick="makeApiRequest()">Make API Request</button>
            <p id="apiResponse" class="mt-3"></p>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        // Check if an API key is already saved in localStorage
        document.addEventListener("DOMContentLoaded", function() {
            const savedKey = localStorage.getItem('geminiApiKey');
            if (savedKey) {
                document.getElementById('apiKeyForm').style.display = 'none';
                document.getElementById('savedApiKey').style.display = 'block';
                document.getElementById('apiActions').style.display = 'block';
                document.getElementById('apiKeyDisplay').innerText = savedKey;
            }
        });

        // Function to save the API key to localStorage
        function saveApiKey() {
            const apiKey = document.getElementById('apiKey').value;
            localStorage.setItem('geminiApiKey', apiKey);
            document.getElementById('apiKeyForm').style.display = 'none';
            document.getElementById('savedApiKey').style.display = 'block';
            document.getElementById('apiActions').style.display = 'block';
            document.getElementById('apiKeyDisplay').innerText = apiKey;
        }

        // Function to remove the API key from localStorage
        function removeApiKey() {
            localStorage.removeItem('geminiApiKey');
            document.getElementById('apiKeyForm').style.display = 'block';
            document.getElementById('savedApiKey').style.display = 'none';
            document.getElementById('apiActions').style.display = 'none';
            document.getElementById('apiKey').value = '';
            document.getElementById('apiKeyDisplay').innerText = '';
        }

        // Function to autofill the API key from localStorage
        function autofillApiKey() {
            const apiKey = localStorage.getItem('geminiApiKey');
            if (apiKey) {
                document.getElementById('apiKey').value = apiKey;
            }
        }

        // Function to make an API request using the saved API key
        function makeApiRequest() {
            const apiKey = localStorage.getItem('geminiApiKey');
            if (!apiKey) {
                alert('API key is missing!');
                return;
            }

            // Replace with your actual Gemini API endpoint and request
            const url = 'https://api.gemini.com/v1/account'; // Example endpoint

            $.ajax({
                url: url,
                method: 'GET',
                headers: {
                    'Authorization': `Bearer ${apiKey}`
                },
                success: function(response) {
                    document.getElementById('apiResponse').innerText = JSON.stringify(response, null, 2);
                },
                error: function(error) {
                    document.getElementById('apiResponse').innerText = 'Error: ' + error.responseText;
                }
            });
        }
    </script>
</body>
</html>
